{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


{{#with main}}
<main>
	{{> title data="All Skills" big=true}}
	<section>
		<ul>
			{{#each skills}}
			<li>
				{{name}}
				{{#if point includeZero=true}} ({{point}}){{/if}}
				{{!-- показати всі поинті включно з 0 --}}
				{{#if isTop}} (TOP) {{/if}}
				{{!-- показати тор якщо значення true --}}
				{{#unless point includeZero=true}} (don't learn) {{/unless}}
				{{!-- віводить напис лише при значені null, тобто не true or #,не вывчаемо --}}
				{{#unless point}}
				{{#if point includeZero=true}}
				(learning now)
				{{!-- виводити напис тільки у випадку значення 0 --}}
				{{/if}}
				{{/unless}}


				{{!-- {{name}} ({{point}}) --}}
				{{!-- {{#if isTop}} (TOP) {{/if}} --}}
				{{!-- виводить там де немае true напис (learn)--}}
				{{!-- {{#unless point}} (learn) {{/unless}} --}}

				{{!-- {{#if point includeZero=true}} (learn) {{/if}} --}}
				{{!-- віводить напис скрізь де є значення true or 0 --}}

				{{!-- {{#unless point includeZero=true}} (don't learn) {{/unless}} --}}
				{{!-- віводить напис лише при значені null, тобто не true or #,  --}}
			</li>
			{{/each}}
		</ul>
	</section>
	<br>
	{{> title data="My hobbies"}}
	<section>
		<ul>
			{{#each hobbies}}
			<li> {{name}} {{#if isMain}} (favourite){{/if}}
			</li>
			{{/each}}
		</ul>
	</section>




</main>
{{/with}}

</div>

