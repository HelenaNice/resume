    <article>
        <h2 class="my-5">{{header}}</h2>
        <div class="row">
            {{!-- ***********первая колонка********* --}}
            <div class="col-8">
                {{#with contacts_data}}
                <div>
                    {{!-- блок паспорт --}}
                    <h2 class="my-2">{{title}}</h2>
                    {{!-- кнопки --}}
                    {{#each buttons}}
                    <span class="me-2 my-5">
                        {{#if isPrimary}}
                        <button class="btn text-light text-bg-warning">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                    </span>
                    {{/each}}
                </div>

                <div>
                    {{#with form}}
                    {{!-- форма ввода юзера --}}
                    <div class="row">
                        {{#with input}}
                        {{!-- первая колонка фамилия, моб --}}
                        <div class="col-6">
                            <div class="mt-2">
                                {{#with surname}}
                                <label class="form-label">{{lable}}</label>
                                <input type="surname" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>

                            <div class="mt-2">
                                {{#with phone}}
                                <label class="form-label">{{lable}}</label>
                                <input type="phone" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        </div>
                        {{!-- вторая колонка имя,почта --}}
                        <div class="col-6">
                            <div class="mt-2">
                                {{#with name}}
                                <label class="form-label">{{lable}}</label>
                                <input type="name" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="mt-2">
                                {{#with email}}
                                <label class="form-label">{{lable}}</label>
                                <input type="email" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <hr class="my-3">

                    {{!-- переключатель --}}

                    <div class="col-12">
                        {{#with switch}}
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{[0].text}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{[1].text}}</label>
                            <input type="checkbox" class="form-check-input" checked>
                        </div>
                        {{/with}}
                    </div>
                    <hr class="my-3">
                    {{/with}}
                </div>
                {{/with}}
                {{!-- ===================== --}}

                {{!-- Доставка --}}
                {{#with delivery}}
                {{title}}
                <div class="card p-1">
                    <div class="row">
                        {{!-- город доставки --}}
                        <div class="col-6">
                            {{#with select.[0]}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option selected label="{{placeholder}}"></option>
                                {{#each options}}
                                <option value="value">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        {{!-- ============== --}}

                        {{!--район доставки--}}
                        <div class="col-6">
                            {{#with select.[1]}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option selected>
                                    {{placeholder}}
                                </option>
                                {{#each options}}
                                <option value="value">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        {{!-- ====================== --}}
                    </div>
                </div>

                {{!-- опции доставки --}}
                <div class="form-group">
                    <div class="form-check">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-check">
                                    {{#each delivery_type}}
                                    <div>
                                        <label class="form-check-label">{{type}}</label>
                                        <input name="delivery_type" type="radio" class="form-check-input">
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            <div class="col-6 text-end">
                                {{#each delivery_type}}
                                <div>{{value}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- ========================== --}}
                <hr class="my-3">
                {{!-- оплата --}}
                <h3 class="my-2">Оплата</h3>
                <div class="col-12">
                    <div class="form-check my-3">
                        {{#each payment}}
                        <label class="form-check-label">{{type}}</label>
                        {{!-- если первый, то чекед --}}
                        {{#if @first}}
                        <input name="payment" type="radio" class="form-check-input" checked>
                        {{else}}
                        <input name="payment" type="radio" class="form-check-input">
                        {{/if}}
                        <div class="form-text">{{description}}</div>
                        {{/each}}
                    </div>
                </div>
