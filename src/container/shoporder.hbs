        <div class="col-4">
            {{!-- кнопки заказа три --}}
            <div class="card p-1">
                {{#each action_block}}
                <span class="my-1">
                    {{#if isPrimary}}
                    <button class="btn text-light text-bg-success">{{text}}</button>
                    {{/if}}
                    {{#if isDanger}}
                    <button class="btn btn-danger">{{text}}</button>
                    {{/if}}
                    {{#if isInfo}}
                    <button class="btn text-light btn-info">{{text}}</button>
                    {{/if}}
                </span>
                {{/each}}
            </div>
            {{!-- ======================= --}}
            <br>
            {{!-- Всего --}}
            <div class="card p-1">
                {{#with total}}
                <h3>{{title}}</h3>
                {{#each item_list}}
                <div>{{name}}: {{price}} </div>
                {{/each}}

                <hr class="my-2">
                {{#each additional_info}}
                <div>{{text}}: {{value}} </div>
                {{/each}}
                <hr class="my-2">
                {{#with total_price}}
                <div>{{text}}: {{value}}</div>
                {{/with}}
                <hr class="my-2">
                {{#each button}}
                <span class="my-1">
                    {{#if isPrimary}}
                    <button class="btn text-light text-bg-primary mb-2">{{text}}</button>
                    {{/if}}
                    {{#if isOutline}}
                    <button class="btn btn-outline-primary mb-2">{{text}}</button>
                    {{/if}}
                </span>
                {{/each}}
                {{/with}}
            </div>
