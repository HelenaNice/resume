<main>
    <article>
        <div class="row g-5">
            <div class="col-8">

                {{#with contacts_data}}
                <div>
                    {{!-- блок паспорт --}}
                    <h2 class="my-2">{{title}}</h2>
                    {{!-- кнопки --}}
                    {{#each buttons}}
                    <span class="me-2 my-5">
                        {{#if isPrimary}}
                        <button class="btn text-light text-bg-warning">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                    </span>
                    {{/each}}
                </div>

                <div>
                    {{#with form}}
                    {{!-- форма ввода юзера --}}
                    <div class="row">
                        {{#with input}}
                        {{!-- первая колонка фамилия, моб --}}
                        <div class="col-6">
                            <div class="mt-2">
                                {{#with surname}}
                                <label class="form-label">{{lable}}</label>
                                <input type="surname" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>

                            <div class="mt-2">
                                {{#with phone}}
                                <label class="form-label">{{lable}}</label>
                                <input type="phone" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        </div>
                        {{!-- вторая колонка имя,почта --}}
                        <div class="col-6">
                            <div class="mt-2">
                                {{#with name}}
                                <label class="form-label">{{lable}}</label>
                                <input type="name" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="mt-2">
                                {{#with email}}
                                <label class="form-label">{{lable}}</label>
                                <input type="email" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    <hr class="my-3">

                    {{!-- переключатель --}}

                    <div class="col-12">
                        {{#with switch}}
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{[0].text}}</label>
                            <input type="checkbox" class="form-check-input">
                        </div>
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{[1].text}}</label>
                            <input type="checkbox" class="form-check-input" checked>
                        </div>
                        {{/with}}
                    </div>
                    <hr class="my-3">
                    {{/with}}
                </div>
                {{/with}}
                {{!-- ===================== --}}
                {{!-- Доставка --}}
                <div>
                    {{#with delivery}}
                    <h3>{{title}}</h3>
                    <div class="card p-1 my-2 mb-4">
                        <div class="row">
                            {{!-- город доставки --}}
                            <div class="col-6">
                                {{#with select.[0]}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected label="{{placeholder}}"></option>
                                    {{#each options}}
                                    <option value="value">{{text}}</option>
                                    {{/each}}
                                </select>
                                {{/with}}
                            </div>
                            {{!-- ============== --}}

                            {{!--район доставки--}}
                            <div class="col-6">
                                {{#with select.[1]}}
                                <label class="form-label">{{label}}</label>
                                <select class="form-select">
                                    <option selected>
                                        {{placeholder}}
                                    </option>
                                    {{#each options}}
                                    <option value="value">{{text}}</option>
                                    {{/each}}
                                </select>
                                {{/with}}
                            </div>
                            {{!-- ====================== --}}
                        </div>
                    </div>

                    {{!-- опции доставки --}}
                    <div class="form-group">
                        <div class="form-check">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-check">
                                        {{#each delivery_type}}
                                        <label class="form-check-label">{{type}}</label>
                                        {{#if @first}}
                                        <input name="delivery_type" type="radio" class="form-check-input" checked>
                                        {{else}}
                                        <input name="delivery_type" type="radio" class="form-check-input">
                                        {{/if}}
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="col-6 text-end">
                                    {{#each delivery_type}}
                                    <div>{{value}}</div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- ========================== --}}
                    <hr class="my-3">
                    {{!-- оплата --}}
                    <h3 class="my-2">Оплата</h3>
                    <div class="col-12">
                        <div class="form-check my-3">
                            {{#each payment}}
                            <label class="form-check-label">{{type}}</label>
                            {{!-- если первый, то чекед --}}
                            {{#if @first}}
                            <input name="payment" type="radio" class="form-check-input" checked>
                            {{else}}
                            <input name="payment" type="radio" class="form-check-input">
                            {{/if}}
                            <div class="form-text">{{description}}</div>
                            {{/each}}

                        </div>
                    </div>
                    {{!-- ============= --}}
                    <hr class="my-3">

                    {{!-- данные получателя --}}

                    <div class="row">
                        {{#with contact}}
                        {{!-- первая колонка фамилия, моб --}}
                        <div class="col-6">
                            <div class="mt-2">
                                {{#with surname}}
                                <label class="form-label">{{lable}}</label>
                                <input type="surname" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>

                            <div class="mt-2">
                                {{#with phone}}
                                <label class="form-label">{{lable}}</label>
                                <input type="phone" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        </div>
                        {{!-- вторая колонка имя,почта --}}
                        <div class="col-6">
                            <div class="mt-2">
                                {{#with name}}
                                <label class="form-label">{{lable}}</label>
                                <input type="name" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="mt-2">
                                {{#with email}}
                                <label class="form-label">{{lable}}</label>
                                <input type="email" class="form-control" id="exampleFormControlInput1"
                                    placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    {{!-- коментар --}}
                    <hr class="my-3">
                    <div>
                        {{#with coment}}
                        <label class="form-label">{{lable}}</label>
                        <input class="form-control" placeholder="{{placeholder}}">
                        {{/with}}
                    </div>
                    {{!-- =============== --}}
                    <hr class="my-4">
                    {{/with}}
                </div>
                {{!-- купоны --}}
                {{#with coupon}}
                <div>
                    <h3>Купони</h3>
                    <hr>
                    {{#with select}}
                    <div class="col-12 mb-3">
                        {{!-- нявн купоны --}}
                        <div class="my-3">
                            {{#with available_coupon}}
                            <label class="form-label">{{lable}}</label>
                            <select class="form-select form-select-lg">
                                <option selected label="{{placeholder}}"></option>
                                {{#each options}}
                                <option value="value">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        {{!-- ====== --}}
                        {{!--  купоны запрошенениіх друзів--}}
                        <div class="my-3">
                            {{#with friend_coupon}}
                            <label class="form-label">{{lable}}</label>
                            <select class="form-select form-select-sm">
                                <option selected label="{{placeholder}}"></option>
                                {{#each options}}
                                <option value="value">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                            <div class="form-text">*Оберіть купон </div>
                        </div>
                    </div>
                    {{/with}}


                    {{!-- ====== --}}
                    {{!-- запросити друзів --}}
                    <div class="my-3">
                        {{#with add}}
                        <div class="my-3">
                            {{#with friend}}
                            <label class="form-label">{{lable}}</label>
                            <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}} </div>
                            {{/with}}
                        </div>
                        <div class="my-3">
                            {{!-- запросити колег --}}
                            {{#with colleague}}
                            <label class="form-label">{{lable}}</label>
                            <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}} </div>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
                {{!-- ====== --}}
                <hr class="my-3">
                {{!-- предпочтения клиента --}}
                <div>
                    {{#with quiz}}
                    <h3>{{title}}</h3>
                    <div>
                        {{!-- preference --}}
                        {{#with preference}}
                        <div>{{title}}</div>
                        <div class="col-12">
                            <div class="form-check my-3">
                                {{#each options}}
                                {{this}}
                                {{#if @first}}
                                <input name="option" type="radio" class="form-check-input" checked>
                                {{else}}
                                <input name="option" type="radio" class="form-check-input">
                                {{/if}}
                                <div class="form-text">{{description}}</div>
                                {{/each}}
                            </div>
                        </div>
                        {{/with}}
                        {{!-- ========== --}}
                    </div>
                    <br>
                    <div>
                        {{!-- expirience --}}
                        {{#with your_expirience}}
                        <div>
                            <label class="form-label">{{label}}</label>
                            <input class="form-control">
                        </div>
                        {{/with}}
                        {{!-- ========== --}}
                    </div>
                    <br>
                    <div>
                        {{!-- purchase_frequency --}}
                        <div class="my-2">
                            {{#with purchase_frequency}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option selected label="{{placeholder}}"></option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                        </div>
                        {{!-- ========== --}}
                        {{!-- factors --}}
                        <div class="my-2">
                            {{#with factors}}
                            <label class="form-label">{{title}}</label>
                            <div class="col-12">
                                <div class="form-check my-3">
                                    {{#each options}}
                                    {{this}}
                                    {{#if @first}}
                                    <input name="factors" type="checkbox" class="form-check-input" checked>
                                    {{else}}
                                    <input name="factors" type="checkbox" class="form-check-input">
                                    {{/if}}
                                    <div class="form-text">{{description}}</div>
                                    {{/each}}
                                </div>
                            </div>
                            {{/with}}
                        </div>
                        {{!-- ======= --}}
                    </div>
                    {{/with}}
                </div>
                {{!-- ============ --}}
                <div class="my-4">
                </div>

            </div>
            <div class="col-4">
                <div class="card p-1">
                    {{#each action_block}}
                    <span class="m-2">
                        {{#if isPrimary}}
                        <button class="btn text-light text-bg-success">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button class="btn btn-danger">{{text}}</button>
                        {{/if}}
                        {{#if isInfo}}
                        <button class="btn text-light btn-info">{{text}}</button>
                        {{/if}}
                    </span>
                    {{/each}}
                </div>
                {{!-- ======================= --}}
                <br>
                {{!-- Всего --}}
                <div class="card p-2">
                    {{#with total}}
                    <h3>{{title}}</h3>
                    {{#each item_list}}
                    <div>{{name}}: {{price}} </div>
                    {{/each}}

                    <hr class="my-2">
                    {{#each additional_info}}
                    <div>{{text}}: {{value}} </div>
                    {{/each}}
                    <hr class="my-2">
                    {{#with total_price}}
                    <div>{{text}}: {{value}}</div>
                    {{/with}}
                    <hr class="my-2">
                    {{#each button}}
                    <span class="my-1">
                        {{#if isPrimary}}
                        <button class="btn text-light text-bg-primary mb-2">{{text}}</button>
                        {{/if}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-primary mb-2">{{text}}</button>
                        {{/if}}
                    </span>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>
    </article>
</main>