<div class="card p-3">
    <div class="card">
        {{!-- хто +дата --}}
        <div class="row p-3">
            <div class="col-8">
                <h6>{{title.userName}}</h6>
                <div>{{title.caption}}</div>
            </div>
            <div class="col-4 text-end">
                <div>{{title.date}}</div>
            </div>
        </div>
        <hr class="p-0">
        {{!-- продавец и текст відгука --}}
        {{#with reviewBody}}
        <div class="p-2">
            <div class="mb-3">{{seller.title}}: {{seller.value}}</div>
            <div class="my-3">{{rating.title}}: {{rating.value}}</div>
            {{!-- текст відгука --}}
            <div class="my-3">{{text}}</div>
            {{!-- переваги --}}
            <div class="mt-3"><b>{{advantages.title}}</b></div>
            <div class="mb-3">{{advantages.text}}</div>
            {{!--недоліки --}}
            <div class="mt-3"><b>{{disadvantages.title}}</b></div>
            <div class="mb-3">{{disadvantages.text}}</div>
            {{!-- всі картинки --}}
            {{#each images}}
            <img width="75px" height="75px" src="{{this}}" alt="image cap">
            {{/each}}
        </div>
        {{/with}}
    </div>
    <br>
    <div>
        {{#each reviewBody.coments}}
        <div>
            {{> comment}}
        </div>
        {{!-- {{> comment}} --}}
        {{/each}}
    </div>
</div>